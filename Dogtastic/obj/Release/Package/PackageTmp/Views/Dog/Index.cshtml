@model DogtasticModels.DogIndex

@{
    ViewBag.Title = "Index";
}

<h2>List Of Registered Dogs</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @TempData["SaveResult"]
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}
<table class="table">
    <tr>
        <th>
            Dog Name
            @*@Html.DisplayNameFor(model => model.Dogs.DogName)*@
        </th>
        <th>
            Dog Size
           @* @Html.DisplayNameFor(model => model.Dogs.DogSize)*@
        </th>
        <th>
            Age Level
           @* @Html.DisplayNameFor(model => model.Dogs.AgeLevel) *@
        </th>

    </tr>
    

    @foreach (var item in Model.Dogs)
    {
       <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DogName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DogSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeLevel)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.DogID })
                @if (Model.UserID == item.UserID)
                {<span>|</span>
                    @Html.ActionLink("Edit", "Edit", new { id = item.DogID }) <span>|</span>
                    @Html.ActionLink("Delete", "Delete", new { id = item.DogID })
                }
             </td>
        </tr>
   }

</table>


