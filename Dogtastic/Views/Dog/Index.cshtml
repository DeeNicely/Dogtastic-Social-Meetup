@model IEnumerable<DogtasticModels.DogListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
<div class="alert alert-success fade in" role="alert">
    @TempData["SaveResult"]
    <button type="button" class="close" data-dismiss="alert">
        <span>&times;</span>
    </button>
</div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DogName) 
            </th>
        <th>
            @Html.DisplayNameFor(model => model.DogSize) 
            </th>
        <th>
            @Html.DisplayNameFor(model => model.AgeLevel)
        </th>
        <th></th>
    </tr>
    

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DogName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DogSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeLevel)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DogID }) |
                @Html.ActionLink("Details", "Details", new { id = item.DogID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DogID })
            </td>
        </tr>
    }

</table>
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        $("i[data-toggle='star']")
            .css({ "cursor": "pointer" })
            .click(function (e) {
                var target = $(e.target);
                var noteId = target.attr("data-id");
                var starSet = target.hasClass("glyphicon-star");

                $.ajax({
                    method: starSet ? "DELETE" : "PUT",
                    url: "/api/note/" + noteId + "/star",
                    data: null
                })
                    .done(function (r) {
                        target.removeClass();
                        target.addClass("glyphicon " + (starSet ? "glyphicon-star-empty" : "glyphicon-star"));
                    })
                    .fail(function (r) {
                        alert("Failed to change star status");
                    });
            });
    });
</script>


