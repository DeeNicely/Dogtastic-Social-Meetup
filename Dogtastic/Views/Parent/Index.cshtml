@model DogtasticModels.ParentIndex

@{
    ViewBag.Title = "Index";
}

<h2>Registered parents</h2>

@*@<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<table class="table">
    <tr>
        <th>
            First Name
            @* @Html.DisplayNameFor(model => model.Parents.FirstName)*@
        </th>
        <th>
            Last Name
            @* @Html.DisplayNameFor(model => model.LastName)*@
        </th>
        <th>
            Zip Code
            @* @Html.DisplayNameFor(model => model.Zipcode)*@
        </th>
        <th>
            Number of Events Attended
            @*@Html.DisplayNameFor(model => model.NumberOfEventsAttended)*@
        </th>
        <th>
            How many dogs do you own?
            @* @Html.DisplayNameFor(model => model.NumberOfDogsOwned)*@
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Parents)
    {
        <tr>
            @Html.HiddenFor(modelItem => item.ParentID)
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zipcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfEventsAttended)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfDogsOwned)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.UserID })
                @if (Model.UserID == item.UserID)
                {<span>|</span>
                    @Html.ActionLink("Edit", "Edit", new { id = item.UserID }) <span>|</span>
                    @Html.ActionLink("Delete", "Delete", new { id = item.UserID })
                }
            </td>
        </tr>
}

</table>
